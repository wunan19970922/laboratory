<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"
    android:background="@drawable/timg"
    android:orientation="vertical"
    tools:context="com.mingrisoft.denglu.ExperimentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/maininterface_back"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="返回" />

        <Button
            android:id="@+id/maininterface_set"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:hint="设置"
            android:layout_marginLeft="270dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="493dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/maininterface_massage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1" />

        <Button
            android:id="@+id/maininterface_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2" />

        <Button
            android:id="@+id/maininterface_experiment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="3" />

        <Button
            android:id="@+id/maininterface_leaving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="4" />
    </LinearLayout>


</LinearLayout>